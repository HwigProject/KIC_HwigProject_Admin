<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hwig.mappers.faqMapper">
	
	<!-- 자주묻는질문 목록 -->
	<select id="fList" resultType="com.hwig.admin.faq.FaqVO">
		select * from faq
	</select>
	
	<!-- 자주묻는질문 등록 -->
	<insert id="faq_write" parameterType="com.hwig.admin.faq.FaqVO">
		insert into faq values((select nvl(max(faq_id)+1,1) from faq), #{faq_category}, #{faq_subject}, #{faq_content})
	</insert>
	
	<!-- 자주묻는질문 조회 -->
	<select id="faq_view" resultType="com.hwig.admin.faq.FaqVO" parameterType="int">
		select * from faq where faq_id = #{faq_id}
	</select>
	
	<!-- 자주묻는질문 수정 -->
	<update id="faq_modify" parameterType="com.hwig.admin.faq.FaqVO">
		update faq
		set faq_subject = #{faq_subject},
			faq_category = #{faq_category},
		    faq_content = #{faq_content}
		where faq_id = #{faq_id}
	</update>
	
	<!-- 자주묻는질문 삭제 -->
	<delete id="faq_delete" parameterType="int">
		delete from faq where faq_id = #{faq_id}
	</delete>
	
	<!-- 자주묻는질문 삭제시 번호 순번 하나씩 땡김 -->
	<update id="faq_id_d" parameterType="com.hwig.admin.faq.FaqVO">
		update faq set faq_id = faq_id - 1 where faq_id > #{faq_id}
	</update>
</mapper>